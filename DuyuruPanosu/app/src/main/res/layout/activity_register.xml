
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/textView3"
        android:layout_centerHorizontal="true"
        tools:context=".Register"
        android:weightSum="1">

        <EditText
            android:id="@+id/register_adisoyadi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_below="@+id/textView3"
            android:layout_alignRight="@+id/register_kullaniciadi"
            android:layout_alignEnd="@+id/register_kullaniciadi"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:gravity="bottom|center_vertical"
            android:hint="Adı Soyadı: *"
            android:layout_weight="0.10" />

        <EditText
            android:id="@+id/register_kullaniciadi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/button_register"
            android:layout_alignEnd="@+id/button_register"
            android:textStyle="bold"
            android:gravity="bottom|center_vertical"
            android:hint="Kullanıcı Adı: *"
            android:layout_weight="0.10" />

        <EditText
            android:id="@+id/register_parola"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_alignRight="@+id/button_register"
            android:layout_alignEnd="@+id/button_register"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:gravity="bottom|center_vertical"
            android:hint="Parola: *"
            android:layout_weight="0.10" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/register_mail"
            android:layout_below="@+id/tv_forgot"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.10"
            android:gravity="bottom|center_vertical"
            android:hint="E-Mail: *"
            android:textStyle="bold|italic" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/register_soru"
            android:layout_gravity="center_horizontal"
            android:hint="Gizli Soru: *"
            android:layout_weight="0.10"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/register_cevap"
            android:layout_gravity="center_horizontal"
            android:hint="Gizli Cevap: *"
            android:password="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tv_uyarı"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.10"
            android:textStyle="bold|italic"
            android:textColor="#ffff1800" />

        <Button
            android:id="@+id/button_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/register_parola"
            android:layout_marginTop="37dp"
            android:longClickable="false"
            android:text="Kaydet"
            android:textStyle="bold"
            android:gravity="bottom|center|fill_vertical|center_horizontal" />

    </LinearLayout>
